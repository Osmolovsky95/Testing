<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>ListServlet</servlet-name>
    <servlet-class>servlets.ListServlet</servlet-class>
</servlet>

    <servlet-mapping>
        <servlet-name>ListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>DeleteStudent</servlet-name>
    <servlet-class>servlets.DeleteServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Administrator</servlet-name>
        <servlet-class>servlets.AdministratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Administrator</servlet-name>
        <url-pattern>/administratorPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateQuestion</servlet-name>
        <servlet-class>servlets.QuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateQuestion</servlet-name>
        <url-pattern>/createQuestion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentSignIn</servlet-name>
        <servlet-class>servlets.StudentSignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentSignIn</servlet-name>
        <url-pattern>/studentPage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>servlets.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListQuestions</servlet-name>
        <servlet-class>servlets.ListQuestionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListQuestions</servlet-name>
        <url-pattern>/listQuestions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>servlets.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/generateReport</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoaderServlet</servlet-name>
        <servlet-class>servlets.LoaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoaderServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>